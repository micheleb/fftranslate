{
    "manifest_version": 2,
    "name": "FF-translate",
    "version": "0.1",
    "description": "Translates selected text",
    "icons": {
        "48": "icons/logo-48.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["fftranslate.js"]
        }
    ],
    "background": {
        "scripts": ["background-script.js"]
    },
    "permissions": ["activeTab", "menus", "https://translate.googleapis.com/*"],
    "web_accessible_resources": ["img/button.png"]
}
